@* Generator: MvcView *@
@{
    ViewBag.PageTitle = "Files";
    ViewBag.Css = true;
    ViewBag.Js = true;
}

<header>
    <div class="form-inline" dir="@Lang.Direction">
        <div class="form-group">
            <input type="button" id="btnManageFolders" class="btn btn-primary" value="@GetText("CKManager", "btnManageFolders")" />
        </div>
        <div class="form-group">
            <label>@GetText("CKManager", "txtDisplayType")</label>
            <select id="selDisplayType" class="form-control">
                <option value="List">@GetText("CKManager", "optDisplayTypeList")</option>
                <option value="Table">@GetText("CKManager", "optDisplayTypeTable")</option>
                <option value="Thumbnail">@GetText("CKManager", "optDisplayTypeThumbanil")</option>
            </select>
        </div>
        <div class="form-group">
            <label>@GetText("CKManager", "txtSortBy")</label>
            <select id="selSortBy" class="form-control">
                <option value="Name">@GetText("CKManager", "optSortByName")</option>
                <option value="Extension">@GetText("CKManager", "optSortByExtension")</option>
                <option value="Size">@GetText("CKManager", "optSortBySize")</option>
                <option value="CreationTime">@GetText("CKManager", "optSortByCreationTime")</option>
            </select>
        </div>
        <div class="form-group">
            <label><input type="radio" name="rdSortDir" value="1" /> @GetText("CKManager", "txtSortDirAscending")</label>
            <label><input type="radio" name="rdSortDir" value="0" /> @GetText("CKManager", "txtSortDirDescending")</label>
        </div>
        <div class="form-group">
            <label>@GetText("CKManager", "txtSearch") </label>
            <input type="text" id="txtSearch" class="form-control" />
        </div>
        <div class="form-group">
            <input type="button" id="btnUpload" class="btn btn-primary" value="@GetText("CKManager", "btnUpload")" />
        </div>
        <div class="form-group">
            <input type="button" id="btnDeleteFiles" class="btn btn-danger" value="@GetText("CKManager", "btnDeleteFiles")" />
        </div>
        <div class="form-group">
            <input type="button" id="btnRenameFile" class="btn btn-primary" value="@GetText("CKManager", "btnRenameFile")" disabled />
        </div>
    </div>
</header>

<div class="container-fluid" id="container">
    <div class="row" id="row">
        @if (Lang.Direction == Locust.Language.TextDirection.ltr)
        {
            <div class="col-xs-2 no-float dirs">
                <ul class="@Lang.Direction" dir="@Lang.Direction"></ul>
            </div>
            <div class="col-xs-10 no-float files">
                <div id="files"></div>
            </div>
        }
        else
        {
            <div class="col-xs-10 no-float files">
                <div id="files"></div>
            </div>
            <div class="col-xs-2 no-float dirs">
                <ul class="@Lang.Direction" dir="@Lang.Direction"></ul>
            </div>
        }
    </div>
</div>

<footer>
    <center>
        <button class="btn btn-primary" id="btnOk">@GetText("CKManager", "btnOk")</button>
        <button class="btn btn-default" id="btnReturn">@GetText("CKManager", "btnReturn")</button>
    </center>
</footer>

<div id="upload-modal" class="modal fade" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal"><i class="glyphicon glyphicon-remove"></i></button>
                <h4 class="modal-title"></h4>
            </div>
            <div class="modal-body"></div>
        </div>
    </div>
</div>

<input id="baseFilesPath" type="hidden" value="@ViewBag.BaseFilesPath" />

